        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
    
    .detail-item {
        padding: 0.5rem 0;
    }
    
    .detail-item i {
        font-size: 1.2rem;
        width: 24px;
        text-align: center;
    }
    
    .booking-header {
        border-bottom: 1px solid #eee;
        padding-bottom: 1rem;
    }
    
    .booking-details {
        flex-grow: 1;
    }
    
    .booking-actions {
        border-top: 1px solid #eee;
        padding-top: 1rem;
    }
</style>

