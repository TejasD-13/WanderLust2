<%- include('../includes/header') %>
<div class="container mt-4">
    <h2>User Dashboard</h2>
    <div class="row">
        <div class="col-md-12">
            <h4>Your Bookings</h4>
            <% if(bookings.length > 0) { %>
                <div class="list-group">
                    <% bookings.forEach(booking => { %>
                        <div class="list-group-item mb-3">
                            <h5><%= booking.listing.title %></h5>
                            <p>Dates: <%= booking.checkIn.toDateString() %> - <%= booking.checkOut.toDateString() %></p>
                            <p>Total: â‚¹<%= booking.totalPrice %></p>
                            <a href="/listings/<%= booking.listing._id %>" class="btn btn-sm btn-primary">View Listing</a>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="alert alert-info">No bookings found</div>
            <% } %>
        </div>
    </div>
</div>
<%- include('../includes/footer') %>
